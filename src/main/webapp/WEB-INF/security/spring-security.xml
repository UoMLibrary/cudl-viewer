<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:security="http://www.springframework.org/schema/security"
	xmlns:oauth="http://www.springframework.org/schema/security/oauth2"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
               http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-4.1.xsd
            http://www.springframework.org/schema/security
http://www.springframework.org/schema/security/spring-security-3.2.xsd
            http://www.springframework.org/schema/security/oauth2
http://www.springframework.org/schema/security/spring-security-oauth2.xsd
 http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd
        http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task-3.0.xsd"
	xmlns:task="http://www.springframework.org/schema/task">

	<security:http pattern="/images/**" security='none' />
	<security:http pattern="/img/**" security='none' />

	<!-- configure the redirect path, based on the access property. -->
	<bean id="loginAccess" class="java.util.Properties">
		<constructor-arg>
			<props>
				<prop key="all">/</prop>
				<prop key="editor">/admin/</prop>
				<prop key="admin">/admin/</prop>
				<prop key="mylibrary">/mylibrary/</prop>
			</props>
		</constructor-arg>
	</bean>

	<!--Security for admin access -->
	<security:http auto-config="false" pattern="/admin/**">

		<security:form-login login-page='/auth/login?access=/admin/' />
		<security:access-denied-handler
			error-page="/auth/denied" />
		<security:logout logout-url="/auth/logout"
			logout-success-url="/auth/login?error=Successfully%20logged%20out &amp;access=/admin/"
			delete-cookies="JSESSIONID" />

		<security:intercept-url pattern="/**" access="ROLE_ADMIN" />

		<security:custom-filter ref="oauth2ClientFilter"
			after="EXCEPTION_TRANSLATION_FILTER" />

		<security:headers>
			<security:frame-options	policy="SAMEORIGIN" />
		</security:headers>
	</security:http>


	<!--Security for editor access -->
	<security:http auto-config="false" pattern="/editor/**">

		<security:form-login login-page='/auth/login?access=/admin/' />
		<security:access-denied-handler
			error-page="/auth/denied" />
		<security:logout logout-url="/auth/logout"
			logout-success-url="/auth/login?error=Successfully%20logged%20out &amp;access=/admin/"
			delete-cookies="JSESSIONID" />

		<security:intercept-url pattern="/**" access="ROLE_ADMIN" />

		<security:custom-filter ref="oauth2ClientFilter"
			after="EXCEPTION_TRANSLATION_FILTER" />

		<security:headers>
			<security:frame-options	policy="SAMEORIGIN" />
		</security:headers>
	</security:http>


	<!--Security for mylibrary access -->
	<security:http auto-config="false" pattern="/mylibrary/**">

		<security:form-login login-page='/auth/login?access=/mylibrary/' />
		<security:access-denied-handler
			error-page="/auth/denied" />
		<security:logout logout-url="/auth/logout"
			logout-success-url="/auth/login?error=Successfully%20logged%20out &amp;access=/mylibrary/"
			delete-cookies="JSESSIONID" />

		<security:intercept-url pattern="/**"
			access="ROLE_USER,ROLE_ADMIN" />

		<security:custom-filter ref="oauth2ClientFilter"
			after="EXCEPTION_TRANSLATION_FILTER" />

		<security:headers>
			<security:frame-options	policy="SAMEORIGIN" />
		</security:headers>
	</security:http>

	<!--Security for all other access -->
	<security:http auto-config="false">

		<security:form-login login-page='/auth/login' />
		<security:logout logout-url="/auth/logout"
			logout-success-url="/auth/login?error=Successfully%20logged%20out."
			delete-cookies="JSESSIONID" />

		<security:intercept-url pattern="/**"
			access="ROLE_ANONYMOUS,ROLE_USER,ROLE_ADMIN" />

		<security:custom-filter ref="oauth2ClientFilter"
			after="EXCEPTION_TRANSLATION_FILTER" />

		<security:headers>
			<security:frame-options	policy="SAMEORIGIN" />
		</security:headers>
	</security:http>

	<!--apply the oauth client context -->

	<oauth:client id="oauth2ClientFilter" />

	<security:authentication-manager alias="defaultAuthenticationManager">
		<security:authentication-provider>
			<security:jdbc-user-service
				data-source-ref="dataSource" />
		</security:authentication-provider>
	</security:authentication-manager>

	<bean id="usersDao"
		class="ulcambridge.foundations.viewer.authentication.UsersDBDao">
		<property name="dataSource" ref="dataSource" />
	</bean>


	<bean id="webexpressionHandler"
		class="org.springframework.security.web.access.expression.DefaultWebSecurityExpressionHandler" />
	<security:global-method-security
		secured-annotations="enabled" />

	<task:annotation-driven />

	<bean id="refresh" class="ulcambridge.foundations.viewer.admin.RefreshCache">
		<property name="collectionFactory" ref="collectionFactory" />
		<property name="itemFactory" ref="itemFactory" />
	</bean>

</beans>
