<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations" value="classpath:cudl-global.properties" />
	</bean>

	<bean id="dataSource"
		class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">

		<property name="driverClassName" value="${jdbc.driver}" />
		<property name="url" value="${jdbc.url}" />
		<property name="username" value="${jdbc.user}" />
		<property name="password" value="${jdbc.password}" />
		<property name="maxActive" value="8" />
		<property name="maxIdle" value="8" />
		<property name="validationQuery" value="SELECT 1" />
		<property name="testOnBorrow" value="true" />
		
	</bean>

	<bean id="collectionsDao" class="ulcambridge.foundations.viewer.dao.CollectionsDBDao">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<!-- Alternative collection dao FOR USE IN TESTING ONLY -->
	<!-- <bean id="collectionsDao" class="ulcambridge.foundations.viewer.dao.CollectionsFileDao"> 
		</bean> -->

	<bean id="collectionFactory" class="ulcambridge.foundations.viewer.CollectionFactory">
		<property name="collectionsDao" ref="collectionsDao" />
	</bean>

</beans>