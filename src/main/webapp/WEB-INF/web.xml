<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">

	<display-name>Foundations Viewer</display-name>
	<description>
    </description>

  <filter>  
     <filter-name>encodingFilter</filter-name>  
     <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>  
     <init-param>  
        <param-name>encoding</param-name>  
        <param-value>UTF-8</param-value>  
     </init-param>  
     <init-param>  
        <param-name>forceEncoding</param-name>  
        <param-value>true</param-value>  
     </init-param>  
  </filter>  
  <filter-mapping>  
     <filter-name>encodingFilter</filter-name>  
     <url-pattern>/*</url-pattern>  
   </filter-mapping> 
   
   
	<!-- sitecontroller servlet -->
	<servlet>
		<servlet-name>siteviewcontroller</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>siteviewcontroller</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>


	<!-- document viewcontroller servlet -->
	<servlet>
		<servlet-name>documentviewcontroller</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>documentviewcontroller</servlet-name>
		<url-pattern>/view/*</url-pattern>
	</servlet-mapping>
	
	<!-- collection viewcontroller servlet -->
	<servlet>
		<servlet-name>collectionviewcontroller</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>collectionviewcontroller</servlet-name>
		<url-pattern>/collections/*</url-pattern>
	</servlet-mapping>

	<!-- externalresourcecontroller servlet -->
	<servlet>
		<servlet-name>externalresourcecontroller</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>externalresourcecontroller</servlet-name>
		<url-pattern>/externalresource</url-pattern>
	</servlet-mapping>
	
	<!-- transcriptioncontroller servlet -->
	<servlet>
		<servlet-name>transcriptioncontroller</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>transcriptioncontroller</servlet-name>
		<url-pattern>/transcription</url-pattern>
	</servlet-mapping>

	<!-- downloadcontroller servlet -->
	<servlet>
		<servlet-name>downloadcontroller</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>downloadcontroller</servlet-name>
		<url-pattern>/download/*</url-pattern>
	</servlet-mapping>

	<!-- formcontroller servlet -->
	<servlet>
		<servlet-name>formcontroller</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>formcontroller</servlet-name>
		<url-pattern>/feedbackform.html</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>formcontroller</servlet-name>
		<url-pattern>/mailinglistform.html</url-pattern>
	</servlet-mapping>	

	<!-- mime types are required or the mvc:resources fails to ignore them -->
	<mime-mapping>
		<extension>json</extension>
		<mime-type>application/json</mime-type>
	</mime-mapping>

	<mime-mapping>
		<extension>dzi</extension>
		<mime-type>text/xml</mime-type>
	</mime-mapping>

	<error-page>
		<error-code>404</error-code>
		<location>/errors/404.html</location>
	</error-page>
	
	<error-page>
		<error-code>500</error-code>
		<location>/errors/500.html</location>
	</error-page>
	
	<jsp-config>
      <taglib>
        <taglib-uri>/spring</taglib-uri>
        <taglib-location>/WEB-INF/tld/spring-form.tld</taglib-location>
      </taglib>
    </jsp-config>
	
</web-app>   
