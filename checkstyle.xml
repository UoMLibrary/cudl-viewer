<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
    "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
    "https://checkstyle.org/dtds/configuration_1_3.dtd">
<module name="Checker">
    <module name="TreeWalker">
        <!-- Disallow logging libraries other than slf4j for consistency. -->
        <module name="IllegalImport">
            <property name="illegalPkgs"
                      value="java.util.logging, org.apache.commons.logging,
                             org.apache.log4j, org.apache.logging.log4j"/>
            <message key="import.illegal"
                     value="Disallowed logging library - {0}. Use org.slf4j API: https://www.slf4j.org/manual.html"/>
        </module>
    </module>
</module>
